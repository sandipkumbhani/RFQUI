    <script>
        $(document).ready(function () {
            $("#btnsave").click(function (e) {
                e.preventDefault();

                var ProfileViewModel = {
                    ProfileName: $("#ProfileName").val(),
                    CompanyTypeId: $("#CompanyTypeId").val(),
                }
                console.log(ProfileViewModel);
                $.ajax({
                    type: "POST",
                    url: "/Home/Profilesave",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(ProfileViewModel),
                    dataType: "json",
                    success: function (result) {
                       
                        if (result.result == "success") {
                            $("#dataDiv").html("Profile saved successfully!");
                        } 
                        else {
                            $("#dataDiv").html("Failed to save profile.");
                        }
                        $("#btnsave").show();
                        $("#btnupdate").hide();
                        $("#btnsaveandnew").prop("disabled", false);
                        $("#viewprofile").click();
                    },
                    error: function (xhr, status, error) {
                        $("#dataDiv").html("Error: " + status + " " + error + " " + xhr.status + " " + xhr.statusText);
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#viewprofile").click(function () {
                $.ajax({
                    url: '/Home/ViewProfile',
                    type: "GET",
                    dataType: 'json',
                    success: function (data) {
                        $("#profileTable tbody").empty(); 
                        $.each(data.profileViewModelDtos, function (index, item) {
                            var row = "<tr>"
                                + "<td>" + item.profileId  + "</td>"
                                + "<td>" + item.profileName + "</td>"
                                + "<td>" + item.companyTypeId + "</td>"
                                + "<td>"
                                + "<button type='button' class='btn btn-primary' id='editprofile'>Edit</button> "
                               
                                + "</td>"
                                + "</tr>";
                            $("#profileTable tbody").append(row);
                        });
                    },
                    error: function () {
                        alert("Error loading data");
                    }
                });
            });
        });
    </script>
    <script>
        $(".delete-btn").click(function () {
            var row = $(this).closest("tr");
            var profileId = row.find("td:eq(0)").text();
            deleteProfile(profileId);
        });</script>
    <script>
        $(document).ready(function () {
            $("#viewprofile").click(function () {
                $.ajax({
                    url: '/Home/ViewProfile',
                    type: "GET",
                    dataType: 'json',
                    success: function (data) {
                        $("#profileTable tbody").empty();
                        $.each(data.profileViewModelDtos, function (index, item) {
                            var row = "<tr>"
                                + "<td>" + item.profileId + "</td>"
                                + "<td>" + item.profileName + "</td>"
                                + "<td>" + item.companyTypeId + "</td>"
                                + "<td>"
                                + "<button type='button' class='btn btn-primary' onclick='editProfile(" + item.profileId + ",\"" + item.profileName + "\",\"" + item.companyTypeId + "\")'>Edit</button> "

                                + "</td>"
                                + "</tr>";
                            $("#profileTable tbody").append(row);
                        });
                    },
                    error: function () {
                        alert("Error loading data");
                    }
                });
            });
        });


        function deleteProfile(profileId) {
            if (confirm("Are you sure you want to delete this profile?")) {
                $.ajax({
                    type: "PUT",
                    url: "/Home/DeleteProfile/" + profileId, // Adjust the URL as needed
                    
                    success: function (result) {
                        if (result.result == "success") {
                            alert("Profile deleted successfully!");
                            $("#viewprofile").click(); // Refresh the table after deletion
                        } else {
                            alert("Failed to delete profile.");
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("Error: " + status + " " + error + " " + xhr.status + " " + xhr.statusText);
                    }
                });
            }
        }
    </script>
    <script>
        function editProfile(profileId, profileName, companyTypeId) {
            $("#ProfileName").val(profileName);
            $("#CompanyTypeId").val(companyTypeId);

            $('html, body').animate({
                scrollTop: $("#profileform").offset().top
            }, 500);

            $("#profileform").data("profileId", profileId);

            $("#btnsave").hide();
            $("#btnupdate").show();

            $("#btnsaveandnew").prop("disabled", true);
        }
    </script>
    <script>
        $(document).ready(function () {
            $("#btnupdate").click(function (e) {
                e.preventDefault();

                var profileId = $("#profileform").data("profileId"); 
                var ProfileViewModel = {
                    ProfileId: profileId,
                    ProfileName: $("#ProfileName").val(),
                    CompanyTypeId: $("#CompanyTypeId").val(),
                }
        
                $.ajax({
                    type: "PUT",
                    url: "/Home/UpdateProfile",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(ProfileViewModel),
                    dataType: "json",
                    success: function (result) {
                        if (result.result == "success") {
                            $("#dataDiv").html("Profile updated successfully!");
                        } else {
                            $("#dataDiv").html("Failed to update profile.");
                        }
                        $("#btnsave").show();
                        $("#btnupdate").hide();
                        $("#btnsaveandnew").prop("disabled", false);
                        $("#viewprofile").click();
                    },
                    error: function (xhr, status, error) {
