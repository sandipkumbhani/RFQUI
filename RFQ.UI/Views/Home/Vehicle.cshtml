    <script>

        $(document).ready(function () 
        {
            $("#btnsave").click(function (e) {
                e.preventDefault();
                debugger
                var VehicleTypeViewModelDto = {
                    VehicleTypeName: $("#VehicleTypeName").val(),
                }
                $.ajax({
                    type: "POST",
                    url: "/Home/Vehicletypesave",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(VehicleTypeViewModelDto),
                    dataType: "json",
                    success: function (result) {
                        if (result.result == "success") {
                            $("#dataDiv").html("Vehicle Type saved successfully!");
                        } 
                        else {
                            $("#dataDiv").html("Failed to save Vehicle Type.");
                        }
                        $("#btnsave").show();
                        $("#btnupdate").hide();
                        $("#btnsaveandnew").prop("disabled", false);
                        $("#viewvehicltype").click();
                    },
                    error: function (xhr, status, error) {
                        $("#dataDiv").html("Error: " + status + " " + error + " " + xhr.status + " " + xhr.statusText);
                    }
                });
            });
        });

    </script>
    <script>

        $(document).ready(function ()
        {
            $("#viewvehicltype").click(function () {
                $.ajax({
                    url: '/Home/ViewVehicleType',
                    type: "GET",
                    dataType: 'json',
                    success: function (data) {
                        $("#vehicleTable tbody").empty();
                        $.each(data.vehicleTypeViewModelDtos, function (index, item) {
                            var row = "<tr>"
                                + "<td>" + item.vechicleTypeId + "</td>"
                                + "<td>" + item.companyId + "</td>"
                                + "<td>" + item.vehicleTypeName + "</td>"
                                + "<td>" + item.createdBy + "</td>"
                                + "<td>" + item.updatedBy + "</td>"
                                + "<td>"
                                + "<button type='button' class='btn btn-primary' onclick='editVehicleType(" + item.vechicleTypeId + ",\"" + item.vehicleTypeName + "\")'>Edit</button> "
                                + "<button type='button' class='btn btn-danger' onclick='deleteProfile(" + item.vechicleTypeId + ")'>Delete</button>"
                                + "</td>"
                                + "</tr>";
                            $("#vehicleTable tbody").append(row);
                        });
                    },
                    error: function () {
                        alert("Error loading data");
                    }
                });
            });
        });

    </script>
    <script>

        function editVehicleType(vechicleTypeId, vehicleTypeName) 
        {
            $("#VehicleTypeName").val(vehicleTypeName);

            $('html, body').animate({
                scrollTop: $("#vehicletypeform").offset().top
            }, 500);

            $("#vehicletypeform").data("vechicleTypeId", vechicleTypeId);

            $("#btnsave").hide();
            $("#btnupdate").show();

            $("#btnsaveandnew").prop("disabled", true);
        }

        $(".delete-btn").click(function () {
            var row = $(this).closest("tr");
            var vechicleTypeId = row.find("td:eq(0)").text();
            deleteProfile(vechicleTypeId);
        });

    </script>
    <script>

        $(document).ready(function () 
        {
            $("#btnupdate").click(function (e) {
                e.preventDefault();

                var vechicleTypeId = $("#vehicletypeform").data("vechicleTypeId");
                var VehicleTypeViewModel = {
                    VechicleTypeId: vechicleTypeId,
                    VehicleTypeName: $("#VehicleTypeName").val(),
                }
                console.log(VehicleTypeViewModel)
                $.ajax({
                    type: "PUT",
                    url: "/Home/UpdateVehicleType",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(VehicleTypeViewModel),
                    dataType: "json",
                    success: function (result) {
                        if (result.result == "success") {
                            $("#dataDiv").html("Profile updated successfully!");
                        } else {
                            $("#dataDiv").html("Failed to update profile.");
                        }
                        $("#btnsave").show();
                        $("#btnupdate").hide();
                        $("#btnsaveandnew").prop("disabled", false);
                        $("#viewprofile").click();
                    },
                    error: function (xhr, status, error) {
                        $("#dataDiv").html("Error: " + status + " " + error + " " + xhr.status + " " + xhr.statusText);
                    }
                });
            });
        });


        function deleteProfile(vechicleTypeId) 
        {
            if (confirm("Are you sure you want to delete this profile?")) {
                $.ajax({
                    type: "PUT",
                    url: "/Home/DeleteVehicleType/" + vechicleTypeId, // Adjust the URL as needed

                    success: function (result) {
                        debugger
                        if (result.result == "success") {
                            alert("Vehicle Type deleted successfully!");
                            $("#viewvehicltype").click(); // Refresh the table after deletion
                        } else {
                            alert("Vehicle Type to delete profile.");
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("Error: " + status + " " + error + " " + xhr.status + " " + xhr.statusText);
                    }
                });
            }
        }

    </script>
