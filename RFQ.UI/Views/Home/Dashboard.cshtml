@model RFQ.UI.Domain.Model.DashboardViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RFQ Dashboard</title>
    <link rel="shortcut icon" type="image/png" href="~/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="https://localhost:7295/Home/Dashboard" class="text-nowrap logo-img">
                        <img src="~/images/logos/dark-logo.svg" width="180" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                                <i class="ti ti-bell-ringing"></i>
                                <div class="notification bg-primary rounded-circle"></div>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <img src="~/images/profile/user-1.jpg" alt="" width="40" height="40" class="rounded-circle">
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!--  Header End -->
                        <div class="card w-100">
                            <div class="card-body">
                                <h5 class="card-title fw-semibold mb-4">Company Userlist</h5>
                                <div class="table-responsive">
                                    <table class="table text-nowrap mb-0 align-middle">
                                        <thead class="text-dark fs-4">
                                            <tr>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">UserId</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">CompanyId</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">LocationId</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">ProfileId</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">PersonName</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">LoginId</h6>
                                                </th>
                                                 <th class="border-bottom-0">
                                                     <h6 class="fw-semibold mb-0">EmailId</h6>
                                                 </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">MobileNo</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">CreatedBy</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">UpdateBy</h6>
                                                </th>
                                                 <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Action</h6>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.CompanyUserDto)
                                            {
                                            <tr>
                                                <td class="border-bottom-0">@item.UserId</td>
                                                <td class="border-bottom-0"> @item.CompanyId</td>
                                                <td class="border-bottom-0">@item.LocationId </td>
                                                <td class="border-bottom-0"> @item.ProfileId</td>
                                                <td class="border-bottom-0">@item.PersonName</td>
                                                <td class="border-bottom-0">@item.LoginId</td>
                                                <td class="border-bottom-0">@item.EmailId</td>
                                                <td class="border-bottom-0">@item.MobileNo</td>
                                                <td class="border-bottom-0">@item.CreatedBy</td>
                                                <td class="border-bottom-0">@item.UpdatedBy</td>
                                                <td class="border-bottom-0">
                                                  <button type="submit" class="btn btn-primary ">Edit</button>
                                                  <button type="submit" class="btn btn-primary ">Delete</button>
                                                </td>
                                            </tr>
                                            }
                                        </tbody>  
                                    </table>
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script>
        $(document).ready(function () {
            // Define default sidebar components
            let defaultSidebarHtml = `
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="https://localhost:7295/Home/Dashboard" aria-expanded="false">
                            <span><i class="ti ti-layout-dashboard"></i></span>
                            <span class="hide-menu">Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="https://localhost:7295/Home/ResetPassword" aria-expanded="false">
                            <span><i class="ti ti-lock"></i></span>
                            <span class="hide-menu">Reset Password</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="https://localhost:7295/Home/ChangePassword" aria-expanded="false">
                            <span><i class="ti ti-lock"></i></span>
                            <span class="hide-menu">Change Password</span>
                        </a>
                    </li>
                `;
            $.ajax({
                url: '/Home/GetMenu',
                type: "GET",
                dataType: 'json',
                success: function (response) {
                    console.log("Menu data: ", response);

                    let menuList = response.menulistDtos;
                    let sidebarHtml = '';
                    
                    let groupedItems = {};
                    menuList.forEach(item => {
                        if (!groupedItems[item.groupId]) {
                            groupedItems[item.groupId] = {
                                groupName: item.linkGroupName,
                                items: []
                            };
                        }
                        groupedItems[item.groupId].items.push(item);
                    });

                    
                    for (let groupId in groupedItems) {
                        let group = groupedItems[groupId];

                        
                        sidebarHtml += '<li class="sidebar-item">';
                        sidebarHtml += '<a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">';
                        sidebarHtml += '<span class="arrow-icon"></span>'; 
                        sidebarHtml += '<i class="ti ti-address-book"></i>'; 
                        sidebarHtml += '<span class="hide-menu">' + group.groupName + '</span>';
                        sidebarHtml += '</a>';
                       
                        sidebarHtml += '<ul class="collapse first-level">';

                        group.items.forEach(item => {
                            sidebarHtml += '<li class="sidebar-item">';
                            sidebarHtml += '<a class="sidebar-link" href="' + item.listingQuery + '">';
                            sidebarHtml += '<span><i class="' + item.linkIcon + '"></i></span>';
                            sidebarHtml += '<span class="hide-menu">' + item.linkName + '</span>';
                            sidebarHtml += '</a>';
                            sidebarHtml += '</li>';
                        });

                        sidebarHtml += '</ul></li>';
                    }

                   
                    let combinedHtml = defaultSidebarHtml + sidebarHtml;

                    $('#sidebarnav').html(combinedHtml);

                    $('.sidebar-link').on('click', function () {
                        let $arrow = $(this).find('.arrow-icon');
                        let $collapse = $(this).next('.collapse');

                        $collapse.slideToggle(500, function () {
                            $arrow.toggleClass('rotate');
                        });

                        $(this).parent().toggleClass('active');
                    });
                },
            });
        });
    </script>
<style>
        .arrow-icon {
            display: inline-block;
            width: 8px;
            height: 8px;
            border-right: 2px solid black;
            border-bottom: 2px solid black;
            margin-right: 10px; 
            transform: rotate(-45deg);
            transition: transform 0.3s ease;
        }
        .rotate {
            transform: rotate(45deg); 
        }
        .active > .sidebar-link {
            background-color: #f0f0f0;
        }


</style>
</body>
</html>